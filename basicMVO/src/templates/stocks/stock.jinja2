{% extends "base.jinja2" %}
{% block content %}
    <div class="mt-3">
        <h1>{{ stock.ticker }} <small class="h4 text-muted">Summary statistics</small></h1>
    </div>
    <hr>
    <div class="container">
    <div class="row">
        <div class="col">
            <img src="https://www.google.com/finance/getchart?q={{ stock.ticker }}&p=10Y&i=86400" />
        </div>
        <div class="col align-self-center">
            <div class="row">
            <h5>Characteristics</h5>
            </div>
            <div class="row">
                <p>Expected Return: <strong>{{ 100*stock.mu |round(5) }}%</strong></p>
            </div>
            <div class="row">
                <p>Standard Deviation: <strong>{{ 100*stock.std |round(5) }}%</strong></p>
            </div>

        </div>
    </div>
    </div>
{% endblock %}
