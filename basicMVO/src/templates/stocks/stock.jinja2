{% extends "base.jinja2" %}
{% block content %}
    <div class="mt-3">
        <h1>{{ stock.ticker }} <small class="h4 text-muted">Summary</small></h1>
    </div>
    <hr>
    <div class="container">
    <div class="row">
        <!--
        <div class="col">
            <img src="https://www.google.com/finance/getchart?q={{ stock.ticker }}&p=10Y&i=86400" />
        </div>
        -->
        <div class="col-8">
                <img src="data:image/png;base64, {{ plot_url }}" width="700" height="500" alt="graph">
            </div>
        <div class="col align-self-center">
            <div class="row">
            <p>Please click on the link below to learn more about this asset! <br> <a href= {{stock.info_url}}>Yahoo Finance Page for this ETF</a></p>

            </div>
            <div class="row">
            <h5>Characteristics</h5>
            </div>
            <div class="row">
                <p>Annual Expected Return: <strong>{{ 100*stock.mu |round(3) }}%</strong></p>
            </div>
            <div class="row">
                <p>Annual Standard Deviation: <strong>{{ 100*stock.std |round(2) }}%</strong></p>
            </div>

        </div>
    </div>
    </div>
{% endblock %}
