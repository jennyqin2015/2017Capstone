{% extends "base.jinja2" %}
{% block content %}
    <div class="jumbotron">
        <h1 class="display-3">SmartInvest</h1>
        <br>
        <p> Do you want to get rid of the pain of figuring out best way to invest your money? Join us today to
            get smart financing advices from our automated financial advisor!
            </p>
        <p>Just sign up, set your risk appetite, and we'll do the rest!</p>
        {% if session['email'] %}
            <p class="lead">
                <a class="btn btn-primary btn-lg" href="{{ url_for('users.logout_user') }}" role="button">Log Out</a>
            </p>
        {% else %}
            <p class="lead">
                <a class="btn btn-primary btn-lg" href="{{ url_for('users.register_user') }}" role="button">Sign up</a>
            </p>
        {% endif %}
    </div>
{% endblock %}
