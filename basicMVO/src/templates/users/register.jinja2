{% extends "base.jinja2" %}
{% block content %}
    <div class="form-size">
        <form action="{{ url_for('users.register_user') }}" method="post">
            <div class="form-group">
                <label for="email">Email address</label>
                <input type="email" class="form-control" id="email" name='email' placeholder="Enter email">
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" id="password" name='password' placeholder="Password">
            </div>

            <div class="form-group">
                <label for="first_name">What is your first name?</label>
                <input type="text" class="form-control" placeholder="Jenny" id="first_name" name="first_name">
            </div>

            <div class="form-group">
                <label for="last_name">What is your last name?</label>
                <input type="text" class="form-control" placeholder="Doe" id="last_name" name="last_name">
            </div>



            <button type="submit" class="btn btn-primary">Sign up</button>
        </form>
    </div>
{% endblock %}
