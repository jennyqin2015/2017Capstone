<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Basic MVO</title>
    <style>
    .navbar-inverse {

     background-color: #222;
     border-color: #080808;
    }
    .nav-link{
    color: lightgray;
    font-size:20px
    }
    body{
        background-image: url("/static/css/bg.png");



    }
    </style>
    {% include "html_dependencies.html" %}

</head>
<body>

<nav class="navbar navbar-expand-lg navbar-inverse" style="height:70px">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbar_right" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="container">
        <div class="collapse navbar-collapse" id="navbar">
            <a class="navbar-brand" href="#" title="Home">Smart Invest</a>
            <ul class="nav navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="{{ url_for('users.user_profile') }}">Profile</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ url_for('users.user_portfolios') }}">Goals</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ url_for('stocks.index') }}">Assets</a>
                </li>

            </ul>
        </div>
      {% if session['email'] %}
          <div class="collapse navbar-collapse justify-content-end" id="navbar">

               <li class="nav-item">
                    <a class="nav-link" href="{{ url_for('stocks.index') }}">About Us</a>
                </li>
              <a class="btn btn-primary" href="{{ url_for('users.logout_user') }}" role="button">Log Out</a>
          </div>
      {% else %}
          <div class="collapse navbar-collapse justify-content-end" id="navbar">
              <a class="btn btn-primary" href="{{ url_for('users.register_user') }}" role="button">Sign up</a>
              <ul class="nav navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="{{ url_for('users.login_user') }}">Login</a>
                </li>
              </ul>
          </div>
      {% endif %}
    </div>
</nav>

<div class="content container">
    {% block content %}

    {% endblock%}
</div>

</body>
</html>