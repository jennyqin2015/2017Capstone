{% extends "base.jinja2" %}
{% block content %}




    <div class="mt-3">
        <h1><strong>Portfolio Overview</strong></h1>
    </div>
    <hr>
    <div class="container">




            <div class="row">
                    <p> Your target goal is <strong> ${{portfolio.amount}}</strong></p>

            </div>
            <div class="row">
                    <p>    Your initial deposit is <strong> ${{portfolio.initial_deposit}}</strong></p>

            </div>
            <div class="row">
                    <p>    Risk Appetite: <strong>{{ portfolio.risk_appetite }}</strong></p>

            </div>



        <div class="row">
                    <p>
                        Tickers:
                        {% for ticker in portfolio.tickers %}
                            <a href="{{ url_for('stocks.stock_page',stock_ticker = ticker) }}">{{ ticker }},</a>
                        {% endfor %}
                        <br>
                    </p>

        </div>


            <div class='row'>



                         <p> Please Click on each quarter to find out more information about the portfolio!<br>

                         </p>
            </div>
                         <div class="row">

                             <p>
                             {% for i in range(year_count) %}
                                <div class = "col-md-3">
                                <a href= "{{ url_for('portfolios.get_individual_portfolio', portfolio_id = portfolio._id, year_index = i)}}"> {{year_list[i]}}
                                </a>
                                </div>
                             {% endfor %}


                             </p>

                         </div>


            <div class= "row">
                <div class="col">
                    <a class="btn btn-primary" href="{{ url_for('portfolios.delete_portfolio',portfolio_id = portfolio._id) }}">Delete this portfolio</a>
                </div>
                <div class ="col">
                    <a class="btn btn-primary" href="{{ url_for('users.user_portfolios') }}">Return to your portfolios</a>
                </div>
                <div class="col">
                        <a class="btn btn-warning"
                           href="{{ url_for('portfolios.change_risk',portfolio_id = portfolio._id) }}">Change your portfolio settings</a>
                </div>
                <div class ="col">
                <a class="btn btn-primary" href="{{ url_for('portfolios.get_performance_by_year', portfolio_id = portfolio._id) }}">check out the performance for this year!</a>
                </div>
            </div>


    </div>
{% endblock %}
